{
  "mcpServers": {
    "hardcoded-auth": {
      "command": "node",
      "args": ["hardcoded_auth_system.mjs"],
      "env": {
        "AUTH_MODE": "hardcoded",
        "NO_SUPABASE": "true"
      }
    },
    "local-database": {
      "command": "npx",
      "args": ["@modelcontextprotocol/server-sqlite@latest"],
      "env": {
        "SQLITE_DB_PATH": "./salon_local.db"
      }
    }
  },
  "hardcoded_credentials": {
    "primary_admin": {
      "username": "admin",
      "password": "admin",
      "role": "admin",
      "status": "always_available"
    },
    "alternative_admin": {
      "username": "salon_admin", 
      "password": "password123",
      "role": "admin",
      "status": "always_available"
    },
    "super_admin": {
      "username": "super_admin",
      "password": "super123",
      "role": "super_admin",
      "status": "always_available"
    },
    "test_user": {
      "username": "test_user",
      "password": "test123",
      "role": "user",
      "status": "always_available"
    },
    "backup_admin": {
      "username": "admin123",
      "password": "admin123",
      "role": "admin",
      "status": "always_available"
    }
  },
  "authentication": {
    "type": "hardcoded",
    "fallback_required": false,
    "dependency": "none",
    "reliability": "100%",
    "description": "Completely independent hardcoded authentication system"
  },
  "features": {
    "no_external_dependencies": true,
    "always_available": true,
    "multiple_admin_accounts": true,
    "session_management": true,
    "role_based_access": true
  },
  "usage_instructions": {
    "login": "Use any of the hardcoded credentials listed above",
    "recommended": "admin/admin for primary access",
    "alternative": "salon_admin/password123 or super_admin/super123",
    "testing": "Run 'node hardcoded_auth_system.mjs' to see all available credentials"
  }
} 